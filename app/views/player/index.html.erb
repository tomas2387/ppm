<span class="lead">All players</span><%= link_to 'Create a new player', '/player/new', :class => "btn" %>
<% if @players.size == 0  %>
    <div>There are no players</div>
<% else %>
    <div class="well">
    <div class="container">
        <%= @players.size %> Players:
        <% @players.each do |p| %>
            <div>
             <span><%= link_to p.name, p %></span>
            </div>
        <% end %>
    </div>
    </div>
<% end %>

<span class="lead">All games</span><%= link_to 'Create a new game', '/game/new', :class => "btn" %>
<% if @games.size == 0  %>
    <div>There are no games</div>
<% else %>
    <div class="well">
    <div class="container">
        <%= @games.size %> Games:
        <% @games.each do |g| %>
            <div>
             <span><%= link_to g.local_player.name+' vs '+g.away_player.name, g %></span>
            </div>
        <% end %>
    </div>
    </div>
<% end %>
